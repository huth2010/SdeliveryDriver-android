<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.call.CallChatFragment"
    android:background="@color/background1"
    android:keepScreenOn="true">

    <RelativeLayout
        android:id="@+id/layoyt_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/remote_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"/>

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/local_view"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/black"
            android:elevation="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_controll_call"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/background_boder_radius_circle"
        android:backgroundTint="@color/grey_transparent"
        android:paddingHorizontal="20dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_videocam_24"
            android:padding="5dp"
            app:tint="@color/white"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_mic"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/icon_mic"
            android:padding="8dp"
            app:tint="@color/white"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_switch_camera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/icon_switch_camera"
            android:padding="8dp"
            app:tint="@color/white"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_vollum_mode"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/icon_vollum_mode_speak"
            android:padding="8dp"
            app:tint="@color/white"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_end_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_call_end_24"
            android:background="@drawable/background_boder_radius_circle"
            android:backgroundTint="@color/red_light"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            app:tint="@color/white"
         />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_require_call"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:paddingHorizontal="20dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/btn_refuse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_call_end_24"
            android:background="@drawable/background_boder_radius_circle"
            android:backgroundTint="@color/red_light"
            android:padding="10dp"
            android:layout_marginEnd="150dp"
            app:tint="@color/white"
            />

        <ImageView
            android:id="@+id/btn_accept"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_call"
            android:background="@drawable/background_boder_radius_circle"
            android:backgroundTint="@color/green_light"
            android:padding="15dp"
            app:tint="@color/white"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/back"
        />

    <TextView
        android:id="@+id/tv_name_calling"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="31dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/img_back"/>

    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/background_boder_radius_circle"
            android:clipToOutline="true"
            />

        <TextView
            android:id="@+id/tv_name_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/title"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="muốn gọi cho bạn"/>

    </LinearLayout>
</RelativeLayout>