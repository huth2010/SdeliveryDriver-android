<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.call.waiting.WaitingFragment">

    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/background_border_radius_circle"
            android:clipToOutline="true"
            />

        <TextView
            android:id="@+id/tv_name_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/title"
            android:textStyle="bold"
            android:text="alo"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alo"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_require_call"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:paddingHorizontal="20dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/btn_refuse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_call_end_24"
            android:background="@drawable/background_border_radius_circle"
            android:backgroundTint="@color/red_light"
            android:padding="10dp"
            android:layout_marginEnd="150dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_accept"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_call"
            android:background="@drawable/background_border_radius_circle"
            android:backgroundTint="@color/green_light"
            android:padding="15dp"
            app:tint="@color/white" />

    </LinearLayout>

</RelativeLayout>